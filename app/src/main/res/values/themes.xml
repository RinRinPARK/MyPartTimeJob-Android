<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.My_Parttime" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/my_font</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.My_Parttime" parent="Base.Theme.My_Parttime" />

    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/my_font</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/blue</item>
    </style>

    <style name="DatePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/blue</item>
        <item name="background">@color/white</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="borderWidth">2dp</item>
        <item name="borderRound">3dp</item>
    </style>

    <style name="NumberPickerStyle">
        <item name="selectableItemBackground">@color/black</item>
        <item name="colorControlNormal">@color/middlegray</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="Theme.My_Parttime.Fullscreen" parent="Theme.My_Parttime">
        <item name="android:actionBarStyle">@style/Widget.Theme.My_Parttime.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.My_Parttime.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>


</resources>