            android:layout_marginRight="10dp"
            android:id="@+id/inputButton"
            android:layout_height="45dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="입력"
            android:textSize="18sp"
            ></Button>

        <Button
            android:background="@drawable/dialog_button_custom"
