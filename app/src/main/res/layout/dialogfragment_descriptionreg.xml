<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/lightgray"
    android:orientation="vertical"
    android:gravity="center"
    android:minWidth="300dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16sp"
        android:layout_marginTop="5sp">

    <ImageView
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_gravity="left"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_user">
    </ImageView>
        <TextView
            android:id="@+id/description_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:paddingTop="8dp"
            android:fontFamily="@font/bold"
            android:textColor="@color/black"
            android:text="홍길동"
            android:textSize="25sp"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:paddingTop="8dp"
            android:textColor="@color/black"
            android:text="알바생"
            android:textSize="15sp"></TextView>


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10sp">

        <TextView
            android:id="@+id/description_text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="10월 21일 시험 일정이 있어 19-21 대타 구합니다"
            android:textSize="15dp">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:layout_marginBottom="15sp"
        android:orientation="horizontal"
        android:paddingBottom="5dp">

        <Button
            android:id="@+id/description_closeBtn"
            android:layout_width="80sp"
            android:layout_height="40sp"
            android:layout_marginRight="15sp"
            android:background="@drawable/daetaapplication_button_custom_cancel"
            android:text="취소"></Button>

        <Button
            android:id="@+id/description_regBtn"
            android:layout_width="80sp"
            android:layout_height="40sp"
            android:background="@drawable/daetaapplication_button_custom_confirm"
            android:text="신청 "></Button>

    </LinearLayout>
</LinearLayout>