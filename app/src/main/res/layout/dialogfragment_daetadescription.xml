<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgray"
    android:gravity="left"
    android:minWidth="300dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20sp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:src="@drawable/ic_description"
            android:textAlignment="center"
            android:layout_gravity="center"></ImageView>

        <TextView
            android:id="@+id/description_branchName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:paddingTop="7dp"
            android:fontFamily="@font/bold"
            android:textColor="@color/black"
            android:text="파리바게뜨 숭실대점"
            android:textSize="25sp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10sp"
        android:layout_marginLeft="50sp"
        android:layout_marginBottom="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="날짜"
            android:fontFamily="@font/bold"
            android:textSize="20dp">
        </TextView>

        <LinearLayout
            android:layout_marginLeft="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/description_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3sp"
                android:text="2023년 11월 24일">
            </TextView>

            <TextView
                android:id="@+id/description_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20:30 ~ 23:00"></TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="50sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15sp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="임금"
            android:fontFamily="@font/bold"
            android:textSize="20dp">
        </TextView>

        <TextView
            android:id="@+id/description_dayWage"
            android:layout_marginLeft="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50000">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원"></TextView>

        <TextView
            android:layout_marginLeft="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시급 "
            android:textSize="10sp"></TextView>

        <TextView
            android:id="@+id/description_wage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10000"
            android:textSize="10sp"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원"
            android:textSize="10sp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="50sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상세 내용"
            android:fontFamily="@font/bold"
            android:textSize="20dp">
        </TextView>

        <TextView
            android:id="@+id/description_description"
            android:layout_marginLeft="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:layout_marginRight="10sp"
            android:text="대타 구해SFFSFSDFSFDSSFDSFSDFSFSDFDSFSDFDsdfdsfdssdfsdfsffsdfsdfsfsdfsdfsfsfssfsdfsSFSFSFSFSFS요">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="15sp">

        <Button
            android:id="@+id/description_closeBtn"
            android:background="@drawable/daetaapplication_button_custom_cancel"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:layout_marginRight="15sp"
            android:text="닫기"></Button>

        <Button
            android:id="@+id/description_applicationBtn"
            android:background="@drawable/daetaapplication_button_custom_confirm"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:text="신청"></Button>

    </LinearLayout>
</LinearLayout>